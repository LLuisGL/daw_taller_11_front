<div class="card shadow-sm border-0">
  <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">
      <i class="bi bi-images me-2"></i>Photo Gallery
    </h5>
    <span class="badge bg-light text-dark">
      <i class="bi bi-collection me-1"></i><%= fotos.length %> photo<%= fotos.length !== 1 ? 's' : '' %>
    </span>
  </div>
  <div class="card-body p-4">
    <% if (fotos.length === 0) { %>
      <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <p class="text-muted mt-3">No photos available. Add your first photo using the form on the left!</p>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th scope="col" class="fw-semibold">
                <i class="bi bi-hash me-1"></i>ID
              </th>
              <th scope="col" class="fw-semibold">
                <i class="bi bi-type-h1 me-1"></i>Title
              </th>
              <th scope="col" class="fw-semibold">
                <i class="bi bi-card-text me-1"></i>Description
              </th>
              <th scope="col" class="fw-semibold text-center">
                <i class="bi bi-star me-1"></i>Rating
              </th>
              <th scope="col" class="fw-semibold text-center">
                <i class="bi bi-gear me-1"></i>Actions
              </th>
            </tr>
          </thead>
          <tbody>
            <% fotos.forEach((foto, idx) => { %>
            <tr class="photo-row">
              <td class="fw-bold text-primary"><%= foto.id %></td>
              <td class="fw-semibold"><%= foto.titulo %></td>
              <td>
                <span class="text-muted" style="max-width: 200px; display: inline-block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="<%= foto.descripcion %>">
                  <%= foto.descripcion %>
                </span>
              </td>
              <td class="text-center">
                <span class="badge bg-warning text-dark">
                  <i class="bi bi-star-fill me-1"></i><%= foto.calificacion %>
                </span>
              </td>
              <td class="text-center">
                <a href="/photos/delete/<%= foto.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this photo?');">
                  <i class="bi bi-trash me-1"></i>Remove
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</div>
